import os
import subprocess

try:
    name = os.environ["PLUMA_CURRENT_DOCUMENT_NAME"]
except KeyError:
    exit(1)

f, ext = os.path.splitext(name)
nxt = ''

if ext == '.c':
    nxt = '.h'

if ext == '.h':
    nxt = '.c'

if nxt:
    subprocess.call(['/usr/bin/pluma', f+nxt])
